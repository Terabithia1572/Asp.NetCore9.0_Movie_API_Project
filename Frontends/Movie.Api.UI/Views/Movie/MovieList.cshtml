@model List<ResultMovieDTO>

@{
	ViewData["Title"] = "MovieList";
	Layout = "~/Views/UserWebUILayout/LayoutUI.cshtml";
}

<div class="page-single movie_list">
	<div class="container">
		<div class="row ipad-width2">
			<div class="col-md-8 col-sm-12 col-xs-12">
				<div class="topbar-filter">
					<p>Toplam <span>187</span> Film Mevcut.</p>
					<label>Filtrele:</label>
					<select>
						<option value="popularity">Popüler Filmler A--Z</option>
						<option value="popularity">Popüler Filmler Z--A</option>
						<option value="rating">En Çok Değerlendirilenler</option>
						<option value="rating">En Çok İzlenenler</option>
						<option value="date">Eklenme Tarihi A-Z</option>
						<option value="date">Eklenme Tarihi Z-A</option>
					</select>
					<a href="movielist.html" class="list"><i class="ion-ios-list-outline active"></i></a>
					<a href="moviegrid.html" class="grid"><i class="ion-grid"></i></a>
				</div>
				@foreach(var item in Model)
				{
					<div class="movie-item-style-2">
						<img src="@item.MovieCoverImageURL" alt="">
						<div class="mv-item-infor">
							<h6><a href="moviesingle.html">@item.MovieTitle <span>@item.MovileCreatedYear</span></a></h6>
							<p class="rate"><i class="ion-android-star"></i><span>@item.MovieRating</span> /10</p>
							<p class="describe">@item.MovieDescription</p>
							<p class="run-time"> Film Uzunluğu: @item.MovieDuration’ Dakika<span>MMPA: PG-13 </span>    .     <span>Çıkış Tarihi: @item.MovieReleaseDate</span></p>
							<p>Director: <a href="#">Joss Whedon</a></p>
							<p>Stars: <a href="#">Robert Downey Jr.,</a> <a href="#">Chris Evans,</a> <a href="#">  Chris Hemsworth</a></p>
						</div>
					</div>
				}
				
				
				<div class="topbar-filter">
					<label>Her Sayfadaki Film Sayısı:</label>
					<select>
						<option value="range">5 Film</option>
						<option value="saab">10 Film</option>
					</select>
					<div class="pagination2">
						<span>Sayfa 1 - 2:</span>
						<a class="active" href="#">1</a>
						<a href="#">2</a>
						<a href="#"><i class="ion-arrow-right-b"></i></a>
					</div>
				</div>
			</div>
			<div class="col-md-4 col-sm-12 col-xs-12">
				<div class="sidebar">
					<div class="searh-form">
						<h4 class="sb-title">Film Arama</h4>
						<form class="form-style-1" action="#">
							<div class="row">
								<div class="col-md-12 form-it">
									<label>Film Adı</label>
									<input type="text" placeholder="Aranacak Kelimeler">
								</div>
								<div class="col-md-12 form-it">
									<label>Tür & Kategori</label>
									<div class="group-ip">
										<select name="skills" multiple="" class="ui fluid dropdown">
											<option value="">Film Türü Seçiniz..</option>
											<option value="Action1">Aksiyon</option>
											<option value="Action2">Macera</option>
											<option value="Action3">Animasyon</option>
											<option value="Action4">Korku</option>
											<option value="Action5">Komedi</option>
										</select>
									</div>

								</div>
								<div class="col-md-12 form-it">
									<label>Reyting Puanı</label>

									<select>
										<option value="range">-- Reyting Puanı Seçin --</option>
										<option value="saab">-- 8.0 ve Üzeri --</option>
										<option value="saab">-- 7.0 & 8.0 --</option>
										<option value="saab">-- 5.0 & 6.9 --</option>
										<option value="saab">-- 5.0'ten düşük --</option>
									</select>

								</div>
								<div class="col-md-12 form-it">
									<label>Film Çıkış Tarihi</label>
									<div class="row">
										<div class="col-md-6">
											<select>
												<option value="range">Yıl Seçiniz</option>
												<option value="number">2000</option>
												<option value="number">2010</option>
												<option value="number">2020</option>
											</select>
										</div>
										<div class="col-md-6">
											<select>
												<option value="range">Yıl Seçiniz</option>
												<option value="number">2000</option>
												<option value="number">2010</option>
												<option value="number">2020</option>
											</select>
										</div>
									</div>
								</div>
								<div class="col-md-12 ">
									<input class="submit" type="submit" value="Ara">
								</div>
							</div>
						</form>
					</div>
					<div class="ads">
						<img src="~/MovieTheme/images/uploads/ads1.png" alt="">
					</div>
					<div class="sb-facebook sb-it">
						<h4 class="sb-title">Find us on Facebook</h4>
						<iframe src="#" data-src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Ftemplatespoint.net%2F%3Ffref%3Dts&tabs=timeline&width=340&height=315px&small_header=true&adapt_container_width=false&hide_cover=false&show_facepile=true&appId" height="315" style="width:100%;border:none;overflow:hidden"></iframe>
					</div>
					<div class="sb-twitter sb-it">
						<h4 class="sb-title">Tweet to us</h4>
						<div class="slick-tw">
							<div class="tweet item" id="">
								<!-- Put your twiter id here -->
							</div>
							<div class="tweet item" id="">
								<!-- Put your 2nd twiter account id here -->
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

