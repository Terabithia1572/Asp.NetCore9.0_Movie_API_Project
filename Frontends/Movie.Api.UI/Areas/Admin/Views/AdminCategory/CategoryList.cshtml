@model List<MovieApi.DTOs.DTOs.AdminCategoryDTOs.AdminResultCategoryDTO>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}



<div class="cinema-shell">
    <div class="cinema-topbar">
        <div class="d-flex align-items-start align-items-md-center justify-content-between gap-3 flex-column flex-md-row">
            <div>
                <h5 class="cinema-title">
                    <span class="badge-dot"></span>
                    Kategori Yönetimi
                </h5>
                <div class="cinema-sub">Kategoriler, film/yorum sayıları ve ortalama puan • sinematik görünüm</div>
            </div>

            <div class="cinema-actions">
                <div class="cinema-search">
                    <span class="search-icon">
                        <ion-icon name="search-sharp"></ion-icon>
                    </span>
                    <input class="form-control" type="text" placeholder="Kategori ara (adına göre)...">
                </div>

                <a href="/Admin/AdminCategory/CreateCategory" class="btn-cinema btn-cinema-primary">
                    <ion-icon name="add-circle-outline"></ion-icon>
                    Yeni Kategori Ekle
                </a>
            </div>
        </div>
    </div>

    <div class="cinema-body">
        <div class="table-responsive">
            <table class="cinema-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Filmler</th>
                        <th>Yorumlar</th>
                        <th>Ort. Puan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;

                        <tr class="cinema-row">
                            <td>@count</td>

                            <td>
                                <div class="cat-title">
                                    <span class="tag">
                                        <ion-icon name="pricetag-outline"></ion-icon>
                                    </span>
                                    <div>
                                        <div>@item.CategoryName</div>
                                        <div class="muted">ID: @item.CategoryID</div>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <span class="metric">
                                    <ion-icon name="film-outline"></ion-icon>
                                    @item.MovieCount
                                </span>
                            </td>

                            <td>
                                <span class="metric">
                                    <ion-icon name="chatbox-ellipses-outline"></ion-icon>
                                    @item.ReviewCount
                                </span>
                            </td>

                            <td>
                                <span class="metric">
                                    <ion-icon name="star"></ion-icon>
                                    @item.AvgRating.ToString("0.0")
                                </span>
                            </td>

                            <td>
                                <span class="pill @(item.IsActive ? "on" : "off")">
                                    <span class="dot"></span>
                                    @(item.IsActive ? "Aktif" : "Pasif")
                                </span>
                            </td>

                            <td>
                                <div class="d-flex gap-2 flex-wrap">
                                    <a href="javascript:;" class="btn-mini btn-mini-warning">
                                        <ion-icon name="create-outline"></ion-icon>
                                        Güncelle
                                    </a>
                                    <a href="javascript:;" class="btn-mini btn-mini-primary">
                                        <ion-icon name="information-circle-outline"></ion-icon>
                                        Detaylar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
