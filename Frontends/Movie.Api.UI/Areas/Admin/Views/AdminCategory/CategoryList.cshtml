@model List<MovieApi.DTOs.DTOs.AdminCategoryDTOs.AdminResultCategoryDTO>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<style>
    /* --- Cinematic Admin (scoped) --- */
    .cinema-shell {
        position: relative;
        border-radius: 18px;
        overflow: hidden;
        background: radial-gradient(1200px 600px at 10% 0%, rgba(255, 0, 61, .18), transparent 55%), radial-gradient(900px 500px at 90% 20%, rgba(0, 162, 255, .14), transparent 52%), linear-gradient(180deg, #0b0b10 0%, #07070b 100%);
        box-shadow: 0 12px 30px rgba(0,0,0,.45);
        border: 1px solid rgba(255,255,255,.06);
    }

    .cinema-topbar {
        padding: 18px 18px 14px 18px;
        border-bottom: 1px solid rgba(255,255,255,.06);
        background: linear-gradient(90deg, rgba(255,0,61,.10), rgba(255,255,255,0));
    }

    .cinema-title {
        display: flex;
        align-items: center;
        gap: 10px;
        margin: 0;
        color: #f5f7ff;
        font-weight: 700;
        letter-spacing: .2px;
    }

        .cinema-title .badge-dot {
            width: 10px;
            height: 10px;
            border-radius: 999px;
            background: #ff003d;
            box-shadow: 0 0 12px rgba(255,0,61,.85);
        }

    .cinema-sub {
        margin-top: 6px;
        color: rgba(245,247,255,.65);
        font-size: .92rem;
    }

    .cinema-actions {
        display: flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .cinema-search {
        position: relative;
        min-width: 260px;
        max-width: 380px;
        width: 100%;
    }

        .cinema-search input {
            border-radius: 12px;
            border: 1px solid rgba(255,255,255,.08);
            background: rgba(255,255,255,.04);
            color: #f5f7ff;
            padding-left: 42px;
            height: 42px;
            outline: none;
            box-shadow: inset 0 0 0 1px rgba(255,255,255,.02);
            transition: .2s ease;
        }

            .cinema-search input::placeholder {
                color: rgba(245,247,255,.45);
            }

            .cinema-search input:focus {
                border-color: rgba(255,0,61,.45);
                box-shadow: 0 0 0 3px rgba(255,0,61,.15);
                background: rgba(255,255,255,.06);
            }

        .cinema-search .search-icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(245,247,255,.65);
            display: inline-flex;
            font-size: 18px;
        }

    .btn-cinema {
        height: 42px;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,.10);
        background: rgba(255,255,255,.05);
        color: #f5f7ff;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 0 14px;
        transition: .2s ease;
        text-decoration: none;
        white-space: nowrap;
    }

        .btn-cinema:hover {
            transform: translateY(-1px);
            background: rgba(255,255,255,.08);
            border-color: rgba(255,255,255,.16);
            color: #fff;
        }

    .btn-cinema-primary {
        background: linear-gradient(90deg, rgba(255,0,61,.95), rgba(255,64,129,.70));
        border-color: rgba(255,0,61,.35);
        box-shadow: 0 10px 22px rgba(255,0,61,.18);
    }

        .btn-cinema-primary:hover {
            box-shadow: 0 14px 26px rgba(255,0,61,.25);
            border-color: rgba(255,0,61,.55);
        }

    .cinema-body {
        padding: 14px 18px 18px 18px;
    }

    .cinema-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

        .cinema-table thead th {
            font-size: .78rem;
            letter-spacing: .6px;
            text-transform: uppercase;
            color: rgba(245,247,255,.60);
            border: none !important;
            padding: 8px 10px;
        }

    .cinema-row {
        background: rgba(255,255,255,.04);
        border: 1px solid rgba(255,255,255,.07);
        transition: .2s ease;
    }

        .cinema-row td {
            border: none !important;
            padding: 14px 12px;
            color: rgba(245,247,255,.90);
            vertical-align: middle;
        }

            .cinema-row td:first-child {
                border-top-left-radius: 14px;
                border-bottom-left-radius: 14px;
                width: 60px;
                color: rgba(245,247,255,.70);
                font-weight: 600;
            }

            .cinema-row td:last-child {
                border-top-right-radius: 14px;
                border-bottom-right-radius: 14px;
            }

        .cinema-row:hover {
            background: rgba(255,255,255,.06);
            border-color: rgba(255,0,61,.22);
            box-shadow: 0 0 0 1px rgba(255,0,61,.08), 0 14px 30px rgba(0,0,0,.35);
            transform: translateY(-1px);
        }

    .cat-title {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 650;
    }

        .cat-title .tag {
            width: 36px;
            height: 36px;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: rgba(0,162,255,.10);
            border: 1px solid rgba(0,162,255,.18);
            box-shadow: 0 0 18px rgba(0,162,255,.10);
            color: rgba(245,247,255,.92);
            font-size: 18px;
            flex: 0 0 auto;
        }

    .muted {
        color: rgba(245,247,255,.65);
        font-weight: 500;
    }

    .metric {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 6px 10px;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,.10);
        background: rgba(255,255,255,.04);
        font-weight: 650;
        min-width: 92px;
        justify-content: center;
        color: rgba(245,247,255,.92);
    }

        .metric ion-icon {
            font-size: 16px;
        }

    .pill {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 6px 10px;
        border-radius: 999px;
        border: 1px solid rgba(255,255,255,.10);
        background: rgba(255,255,255,.04);
        font-size: .85rem;
    }

        .pill .dot {
            width: 8px;
            height: 8px;
            border-radius: 999px;
            background: rgba(255,255,255,.45);
        }

        .pill.on .dot {
            background: #2ee59d;
            box-shadow: 0 0 12px rgba(46,229,157,.55);
        }

        .pill.off .dot {
            background: #ffb020;
            box-shadow: 0 0 12px rgba(255,176,32,.45);
        }

    .btn-mini {
        border-radius: 12px;
        height: 36px;
        padding: 0 12px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: 1px solid rgba(255,255,255,.10);
        background: rgba(255,255,255,.05);
        color: #f5f7ff;
        text-decoration: none;
        transition: .2s ease;
        white-space: nowrap;
    }

        .btn-mini:hover {
            background: rgba(255,255,255,.08);
            transform: translateY(-1px);
            color: #fff;
            border-color: rgba(255,255,255,.16);
        }

    .btn-mini-warning {
        background: rgba(255,176,32,.12);
        border-color: rgba(255,176,32,.22);
    }

    .btn-mini-primary {
        background: rgba(255,0,61,.12);
        border-color: rgba(255,0,61,.22);
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>

<div class="cinema-shell">
    <div class="cinema-topbar">
        <div class="d-flex align-items-start align-items-md-center justify-content-between gap-3 flex-column flex-md-row">
            <div>
                <h5 class="cinema-title">
                    <span class="badge-dot"></span>
                    Kategori Yönetimi
                </h5>
                <div class="cinema-sub">Kategoriler, film/yorum sayıları ve ortalama puan • sinematik görünüm</div>
            </div>

            <div class="cinema-actions">
                <div class="cinema-search">
                    <span class="search-icon">
                        <ion-icon name="search-sharp"></ion-icon>
                    </span>
                    <input class="form-control" type="text" placeholder="Kategori ara (adına göre)...">
                </div>

                <a href="javascript:;" class="btn-cinema btn-cinema-primary">
                    <ion-icon name="add-circle-outline"></ion-icon>
                    Yeni Kategori Ekle
                </a>
            </div>
        </div>
    </div>

    <div class="cinema-body">
        <div class="table-responsive">
            <table class="cinema-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Filmler</th>
                        <th>Yorumlar</th>
                        <th>Ort. Puan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;

                        <tr class="cinema-row">
                            <td>@count</td>

                            <td>
                                <div class="cat-title">
                                    <span class="tag">
                                        <ion-icon name="pricetag-outline"></ion-icon>
                                    </span>
                                    <div>
                                        <div>@item.CategoryName</div>
                                        <div class="muted">ID: @item.CategoryID</div>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <span class="metric">
                                    <ion-icon name="film-outline"></ion-icon>
                                    @item.MovieCount
                                </span>
                            </td>

                            <td>
                                <span class="metric">
                                    <ion-icon name="chatbox-ellipses-outline"></ion-icon>
                                    @item.ReviewCount
                                </span>
                            </td>

                            <td>
                                <span class="metric">
                                    <ion-icon name="star"></ion-icon>
                                    @item.AvgRating.ToString("0.0")
                                </span>
                            </td>

                            <td>
                                <span class="pill @(item.IsActive ? "on" : "off")">
                                    <span class="dot"></span>
                                    @(item.IsActive ? "Aktif" : "Pasif")
                                </span>
                            </td>

                            <td>
                                <div class="d-flex gap-2 flex-wrap">
                                    <a href="javascript:;" class="btn-mini btn-mini-warning">
                                        <ion-icon name="create-outline"></ion-icon>
                                        Güncelle
                                    </a>
                                    <a href="javascript:;" class="btn-mini btn-mini-primary">
                                        <ion-icon name="information-circle-outline"></ion-icon>
                                        Detaylar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
